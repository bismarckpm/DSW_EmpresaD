<persistence xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">

    <persistence-unit name = "mercadeoucab">
        <class>mercadeoucab.entidades.DatoEncuestado</class>
        <class>mercadeoucab.entidades.EncuestaEstudio</class>
        <class>mercadeoucab.entidades.Estado</class>
        <class>mercadeoucab.entidades.Marca</class>
        <class>mercadeoucab.entidades.MuestraPoblacion</class>
        <class>mercadeoucab.entidades.Municipio</class>
        <class>mercadeoucab.entidades.Ocupacion</class>
        <class>mercadeoucab.entidades.OcupacionEncuestado</class>
        <class>mercadeoucab.entidades.OcupacionMuestra</class>
        <class>mercadeoucab.entidades.Opcion</class>
        <class>mercadeoucab.entidades.Pais</class>
        <class>mercadeoucab.entidades.Parroquia</class>
        <class>mercadeoucab.entidades.Pregunta</class>
        <class>mercadeoucab.entidades.Presentacion</class>
        <class>mercadeoucab.entidades.PresentacionSolicitud</class>
        <class>mercadeoucab.entidades.Respuesta</class>
        <class>mercadeoucab.entidades.Solicitud</class>
        <class>mercadeoucab.entidades.Usuario</class>
        <class>mercadeoucab.entidades.Estudio</class>
        <class>mercadeoucab.entidades.TipoSolicitud</class>
        <class>mercadeoucab.entidades.SubCategoriaSolicitud</class>
        <class>mercadeoucab.entidades.Categoria</class>

        <properties>
            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/mercadeoucab?serverTimezone=UTC"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="mysql"/>
            <property name="hibernate.dialect" value="org.hibernate.dialect.MySQLDialect"/>
            <property name="eclipselink.logging.level" value="FINE"/>
        </properties>
    </persistence-unit>

</persistence>
